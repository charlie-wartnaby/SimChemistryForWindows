seln_reset;
select "normal text" 3;
select "normal text" 2;
seln_delete;
textbox "normal text" xleft 1.73 ytop 1.76 text "When the nitrogen molecules are$n$allowed to do so, they stick readily$n$to the nickel surface at this temperature.$n$The gas phase pressure above the$n$surface decreases accordingly." id 4;
run;
delay 10.900000;
stop;
objtype monitor name "monitor1" ;
monitor "monitor1" moltype "nickel" nofixt 100 nofixdens 10 moltype "nitrogen" nofixt 100 nofixdens 10 id 0 xleft 0.25 xright 1.6 ytop 2.15 ybottom 1.65 mon_uid 1;
monitor "monitor1" moltype "nickel" nofixt 100 nofixdens 10 moltype "nitrogen" nofixt 100 nofixdens 10 id 0 xleft 0.45 xright 1.4 ytop 1.35 ybottom 1.1 mon_uid 2;
run;
delay 8.500000;
