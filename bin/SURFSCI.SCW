seln_reset;
select "normal text" 4;
seln_delete;
textbox "normal text" xleft 1.725 ytop 2.115 text "The red regions are 'monitors', which$n$perform measurements as reported$n$below. We are interested in the number$n$of adsorbed molecules, the gas phase$n$pressure above the surface, and the$n$current temperature." id 5;
objtype textbox name "measurement text" font "Courier New" size 16;
textbox "measurement text" xleft 1.755 ytop 1.295 text "pressure    = $monitor1:1:nitrogen:partial_p_s$$n$temperature = $sim:temperature$$n$N(nitrogen) = $monitor1:2:nitrogen:number$$n$N(nickel)   = $monitor1:2:nickel:number$" id 1;
run;
delay 29.000000;
